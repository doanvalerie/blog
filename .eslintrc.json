{
  "extends": "next/core-web-vitals",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "tabWidth": 2,
        "printWidth": 80,
        "useTabs": false,
        "trailingComma": "es5",
        "endOfLine": "lf",
        "semi": true,
        "singleQuote": true
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-unused-vars": "error",
    "no-unused-labels": "error"
  }
}